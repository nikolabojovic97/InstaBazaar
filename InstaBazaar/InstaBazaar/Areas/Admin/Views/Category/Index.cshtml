@model IEnumerable<InstaBazaar.Models.Category>

@{
    ViewData["Title"] = "Kategorije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategorija</h1>

<p>
    <div class="col-6">
        <a asp-action="Create" class="btn btn-dark bg-primary text-light"><i class="fas fa"></i> &nbsp; Nova kategorija</a>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="row-cols-4"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td align="right">
                <div class="row-cols-3">
                    <a asp-action="Edit" asp-route-Id="@item.Id" class="btn bg-primary text-light">Izmeni</a>
                    <a asp-action="Details" asp-route-Id="@item.Id" class="btn bg-primary text-light">Detalji</a>
                    <a asp-action="Delete" asp-route-Id="@item.Id" class="btn bg-danger text-light">Izbriši</a>
                </div>
                
                @{ 
                /*@Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*/
                }
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <h4 class="text-center">Nema kategorija</h4>     
                </td>
            </tr>
        }
    </tbody>
</table>
