@model InstaBazaar.Models.InstagramAccount

@{
    ViewData["Title"] = "Brisanje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite da izbrišete Instagram nalog?</h3>
<div>
    <h4>@("@")@Html.DisplayFor(model => model.IgUserName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MemberSince)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberSince)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalFollowers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalFollowers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPosts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPosts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvgComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvgComments)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvgLikes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvgLikes)
        </dd>
    </dl>
    <div>
        <a class="btn bg-primary text-light" asp-controller="User" asp-action="Details" asp-route-id="@Model.Id">@Model.User.UserName</a>
    </div>

    <br />

    <form asp-action="DeleteAccount" asp-route-id="@Model.Id" method="post">
        <input type="submit" value="Izbriši" class="btn btn-danger" />
    </form>
</div>

<br />

<div>
    <a asp-action="Index">Nazad na sve korisnike</a>
</div>
